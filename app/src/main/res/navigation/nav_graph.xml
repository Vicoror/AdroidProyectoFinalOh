<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!--  SPLASH FRAGMENT (primera pantalla) -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.vicoror.appandroidfinal.ui.main.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- LOGIN FRAGMENT -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vicoror.appandroidfinal.ui.main.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_loginDatosFragment"
            app:destination="@id/loginDatosFragment" />
        <!-- 1. Acción a HomeFragment (para usuarios existentes) -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <!-- 2. Acción a SurveyFragment (para usuarios nuevos) -->
        <action
            android:id="@+id/action_loginFragment_to_surveyFragment"
            app:destination="@id/surveyFragment" />
    </fragment>

    <!-- LOGIN DATOS FRAGMENT -->
    <fragment
        android:id="@+id/loginDatosFragment"
        android:name="com.vicoror.appandroidfinal.ui.main.LoginDatosFragment"
        tools:layout="@layout/fragment_login_datos">

        <action
            android:id="@+id/action_loginDatosFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_loginDatosFragment_to_surveyFragment"
            app:destination="@id/surveyFragment" />
    </fragment>

    <!-- SURVEY FRAGMENT -->
    <fragment
        android:id="@+id/surveyFragment"
        android:name="com.vicoror.appandroidfinal.ui.main.SurveyFragment"
        tools:layout="@layout/fragment_survey">
        <action
            android:id="@+id/action_surveyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- HOME FRAGMENT -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vicoror.appandroidfinal.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_phrasesFragment"
            app:destination="@id/phrasesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_menuConjugaisonsFragment"
            app:destination="@id/menuConjugaisonsFragment" />
    </fragment>

    <!-- PHRASES FRAGMENT (CORREGIDO: UN SOLO ARGUMENTO MODE) -->
    <fragment
        android:id="@+id/phrasesFragment"
        android:name="com.vicoror.appandroidfinal.ui.phrases.PhrasesFragment"
        android:label="Phrases"
        tools:layout="@layout/fragment_phrases">

        <!-- UN SOLO argumento mode -->
        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="phrases" />

        <action
            android:id="@+id/action_phrasesFragment_to_phrasesEx1Fragment"
            app:destination="@id/phrasesEx1Fragment">
            <argument
                android:name="selectedBlockIndex"
                app:argType="integer" />
            <!-- AÑADIR EL ARGUMENTO MODE AQUÍ -->
            <argument
                android:name="mode"
                app:argType="string" />
        </action>

    </fragment>

    <!-- PHRASES EXERCISE 1 FRAGMENT -->
    <fragment
        android:id="@+id/phrasesEx1Fragment"
        android:name="com.vicoror.appandroidfinal.ui.phrases.PhrasesEx1Fragment"
        android:label="Phrases Exercise 1"
        tools:layout="@layout/fragment_phrases_ex1">

        <!-- ARGUMENTOS DEL FRAGMENTO -->
        <argument
            android:name="selectedBlockIndex"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="phrases" />

        <!-- Acción para regresar al menú de frases -->
        <action
            android:id="@+id/action_phrasesEx1Fragment_to_phrasesFragment"
            app:destination="@id/phrasesFragment">
            <!-- Pasar el argumento mode -->
            <argument
                android:name="mode"
                app:argType="string"
                android:defaultValue="phrases" />
        </action>

        <action
            android:id="@+id/action_phrasesEx1Fragment_to_phrasesEx2Fragment"
            app:destination="@id/phrasesEx2Fragment">
            <!-- Añadir los argumentos necesarios -->
            <argument
                android:name="selectedBlock"
                app:argType="integer" />
            <argument
                android:name="mode"
                app:argType="string" />
        </action>
    </fragment>

    <!-- PHRASES EXERCISE 2 FRAGMENT -->
    <fragment
        android:id="@+id/phrasesEx2Fragment"
        android:name="com.vicoror.appandroidfinal.ui.phrases.PhrasesEx2Fragment">

        <argument
            android:name="selectedBlock"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="phrases" />

        <!-- Acción para regresar a PhrasesFragment -->
        <action
            android:id="@+id/action_phrasesEx2Fragment_to_phrasesFragment"
            app:destination="@id/phrasesFragment">
            <!-- ¡IMPORTANTE! Pasar el argumento mode de regreso -->
            <argument
                android:name="mode"
                app:argType="string"
                android:defaultValue="phrases" />
        </action>

        <!-- Acción para ir a PhrasesEx3Fragment -->
        <action
            android:id="@+id/action_phrasesEx2Fragment_to_phrasesEx3Fragment"
            app:destination="@id/phrasesEx3Fragment">
            <argument
                android:name="selectedBlock"
                app:argType="integer" />
            <argument
                android:name="mode"
                app:argType="string" />
        </action>

    </fragment>

    <!-- PHRASES EXERCISE 3 FRAGMENT -->
    <fragment
        android:id="@+id/phrasesEx3Fragment"
        android:name="com.vicoror.appandroidfinal.ui.phrases.PhrasesEx3Fragment"
        android:label="PhrasesEx3Fragment"
        tools:layout="@layout/fragment_phrases_ex3">

        <argument
            android:name="selectedBlock"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="phrases" />

        <!-- Acción para regresar a PhrasesFragment -->
        <action
            android:id="@+id/action_phrasesEx3Fragment_to_phrasesFragment"
            app:destination="@id/phrasesFragment">
            <!-- FALTABA EL ARGUMENTO MODE AQUÍ -->
            <argument
                android:name="mode"
                app:argType="string"
                android:defaultValue="phrases" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/menuConjugaisonsFragment"
        android:name="com.vicoror.appandroidfinal.ui.conjugaisons.MenuConjugaisonsFragment"
        android:label="fragment_menu_conjugaisons"
        tools:layout="@layout/fragment_menu_conjugaisons" >
        <action
            android:id="@+id/action_menuConjugaisonsFragment_to_conjugaisonsFragment"
            app:destination="@id/conjugaisonsFragment" />
    </fragment>
    <fragment
        android:id="@+id/conjugaisonsFragment"
        android:name="com.vicoror.appandroidfinal.ui.conjugaisons.ConjugaisonsFragment"
        android:label="fragment_conjugaisons"
        tools:layout="@layout/fragment_conjugaisons">

    <argument
        android:name="selectedTense"
        app:argType="string"
        android:defaultValue="" />

    <argument
        android:name="jsonFileName"
        app:argType="string"
        android:defaultValue="" />
        <action
            android:id="@+id/action_conjugaisonsFragment_to_nivel1ConjugaisonsFragment"
            app:destination="@id/nivel1ConjugaisonsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nivel1ConjugaisonsFragment"
        android:name="com.vicoror.appandroidfinal.ui.conjugaisons.Nivel1ConjugaisonsFragment"
        android:label="fragment_nivel1_conjugaisons"
        tools:layout="@layout/fragment_nivel1_conjugaisons">

        <!-- ESTOS ARGUMENTOS SON OBLIGATORIOS -->
        <argument
            android:name="selectedTense"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="blockIndex"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="jsonFileName"
            app:argType="string" />

        <argument
            android:name="conjugacionIds"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_nivel1ConjugaisonsFragment_to_nivel2ConjugaisonsFragment"
            app:destination="@id/nivel2ConjugaisonsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nivel2ConjugaisonsFragment"
        android:name="com.vicoror.appandroidfinal.ui.conjugaisons.Nivel2ConjugaisonsFragment"
        android:label="fragment_nivel2_conjugaisons"
        tools:layout="@layout/fragment_nivel2_conjugaisons" >
        <argument
            android:name="selectedTense"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="blockIndex"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="jsonFileName"
            app:argType="string" />
        <action
            android:id="@+id/action_nivel2ConjugaisonsFragment_to_conjugaisonsFragment"
            app:destination="@id/conjugaisonsFragment" />
    </fragment>

</navigation>