<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.LoginFragment">

    <TextView
        android:id="@+id/tvBonjour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvBonjour"
        android:textSize="36sp"
        android:fontFamily="@font/poetsen_one_regular"
        android:textColor="@color/titles"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvBonjour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_width="351dp"
        android:layout_height="63dp"
        android:text="@string/btnLogin"
        android:textSize="24sp"
        android:fontFamily="@font/poetsen_one_regular"
        android:textColor="@color/principal"
        app:strokeColor="@color/principal"
        app:strokeWidth="5dp"
        app:cornerRadius="20dp"
        app:rippleColor="@color/titlesextralight"
        app:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/tvContinuar"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/tvContinuar"
        android:fontFamily="@font/manrope_regular"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <!-- <ImageView
        android:id="@+id/facebook"
        app:layout_constraintTop_toBottomOf="@id/tvContinuar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/facebook"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="60dp"
        android:translationX="80dp"/>
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" -->
    <ImageView
        android:id="@+id/google"
        app:layout_constraintTop_toBottomOf="@id/tvContinuar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/google"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="30dp"
        android:translationX="0dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/tvTerminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTerminos"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>