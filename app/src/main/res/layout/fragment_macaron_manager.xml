<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestor de Macarones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvMacaronCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macarons: 0/5"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvMacaronStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/principal"
        android:layout_marginBottom="32dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvRecoveryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/principalextralight"
        android:layout_marginBottom="32dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnConsumeMacaron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumir MacarrÃ³n"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnRestoreMacarons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurar Macarones (Test)" />

</LinearLayout>