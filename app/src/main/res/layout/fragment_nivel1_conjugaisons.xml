<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principalextralight">

    <!-- TOP BAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@android:color/white"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Exit -->
            <TextView
                android:id="@+id/btnExit"
                android:text="×"
                android:textSize="32sp"
                android:textColor="@color/principal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <!-- Lives -->
            <LinearLayout
                android:id="@+id/livesStack"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btnExit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Timer -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timerContainer"
                android:layout_width="60dp"
                android:layout_height="40dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="@color/principal"
                app:strokeWidth="2dp"
                app:layout_constraintEnd_toStartOf="@id/btnPro"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/timerLabel"
                    android:text="100"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:textSize="18sp"
                    android:textColor="@color/principal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>


            <!-- PRO -->
            <TextView
                android:id="@+id/btnPro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="∞"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_pro_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="5dp"
                android:clickable="true"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- TITULO -->
    <TextView
        android:id="@+id/tituloLabel"
        android:text="Niveau 1"
        android:textSize="28sp"
        android:textColor="@color/titleslight"
        android:fontFamily="@font/poetsen_one_regular"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <!-- SUBTITULO -->
    <TextView
        android:id="@+id/subtituloLabel"
        android:text="Choisissez la bonne réponse"
        android:textSize="20sp"
        android:textColor="@color/titleslight"
        android:fontFamily="@font/poetsen_one_regular"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tituloLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <!-- SCROLL -->
    <!-- Shimmer EXTERNO al ScrollView -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subtituloLabel"
        app:layout_constraintBottom_toTopOf="@id/bonnesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:visibility="visible">

        <!-- Contenido del shimmer (simulación) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Simulación de TextView -->
                <View
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@color/textgrey"
                    android:layout_gravity="center_horizontal"/>

                <!-- Simulación de otro TextView -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/textgrey"
                    android:layout_marginTop="16dp"/>

                <!-- Simulación de botones -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/textgrey"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/textgrey"
                    android:layout_marginTop="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/textgrey"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- ScrollView con contenido REAL -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subtituloLabel"
        app:layout_constraintBottom_toTopOf="@id/bonnesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:visibility="gone"> <!-- Inicialmente invisible -->

        <androidx.cardview.widget.CardView
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/verboLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/titles"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/fraseFrLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/titles"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/fraseEsLabel"
                    android:textSize="18sp"
                    android:textColor="@color/textdark"
                    android:fontFamily="@font/nunito_medium"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/opcionesStack"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpcion1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/principalextralight"
                        android:gravity="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpcion2"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/principalextralight"
                        android:gravity="center"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpcion3"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/principalextralight"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- BONNES -->
    <TextView
        android:id="@+id/bonnesLabel"
        android:text="Bonnes Réponses: 0"
        android:textSize="18sp"
        android:textColor="@color/titles"
        android:fontFamily="@font/poetsen_one_regular"
        app:layout_constraintBottom_toTopOf="@id/btnSuivant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <!-- SUIVANT -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSuivant"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:textSize="24sp"
        android:text="@string/suivant"
        android:fontFamily="@font/poetsen_one_regular"
        android:backgroundTint="@android:color/white"
        app:rippleColor="@color/titleslight"
        android:textColor="@color/textdark"
        app:cornerRadius="12dp"
        app:strokeWidth="5dp"
        app:strokeColor="@color/principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
