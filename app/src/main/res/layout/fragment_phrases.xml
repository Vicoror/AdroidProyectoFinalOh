<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phrasesRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principalextralight">

    <!-- Top Bar con MaterialCardView -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:padding="12dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/textgrey"
            app:cardUseCompatPadding="true"
            android:outlineProvider="background">

            <!-- Imagen + Número (izquierda) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_gravity="start|center_vertical">

                <ImageView
                    android:id="@+id/iconLives"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/macaron_c5a4da"
                    android:contentDescription="@string/vidas" />

                <TextView
                    android:id="@+id/livesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Título ABSOLUTAMENTE centrado -->
            <TextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phrases"
                android:textColor="@color/textdark"
                android:textSize="26sp"
                android:fontFamily="@font/poetsen_one_regular"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ScrollView entre TopBar y BottomTabBar -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomTabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/macaronContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />
    </ScrollView>

    <!-- Bottom Tab Bar (AGREGADO) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomTabBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Tab Home -->
            <LinearLayout
                android:id="@+id/tabHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/principalextralight">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/principal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textSize= "10sp"
                    android:textColor="@color/principal"
                    android:fontFamily="@font/nunito_medium" />

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- OVERLAY que cubre toda la pantalla -->
    <FrameLayout
        android:id="@+id/overlayMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true">

        <!-- TARJETA DEL MENSAJE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/viewMsgPrincipal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageButton
                    android:id="@+id/btnCerrarMsg"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_delete"
                    app:tint="@color/textgrey"
                    android:contentDescription="@string/cerrar_mensaje" />

                <TextView
                    android:id="@+id/labelMsgPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/titles"
                    android:fontFamily="@font/hachi_maru_pop_regular"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMsgPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/continuarphrases"
                    android:fontFamily="@font/nunito_medium"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/principal"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</RelativeLayout>