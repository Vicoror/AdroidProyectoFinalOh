<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principalextralight"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivLeftMacaron"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/macaron_8cd5c9"
        android:contentDescription="@string/macaron_decorativo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/ivRightMacaron"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/macaron_8cd5c9"
        android:contentDescription="@string/macaron_decorativo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/choisissez_le_temps_verbal"
        android:textColor="@color/titles"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="@font/poetsen_one_regular"
        android:lineSpacingExtra="4dp"
        app:layout_constraintStart_toEndOf="@id/ivLeftMacaron"
        app:layout_constraintEnd_toStartOf="@id/ivRightMacaron"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp" />

    <!-- Bottom Tab Bar - AHORA CON CONSTRAINTS CORRECTAS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomTabBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/principalextralight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Este LinearLayout ahora OCUPA TODO el CardView -->
        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/principal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="10sp"
                android:textColor="@color/principal"
                android:fontFamily="@font/nunito_medium" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- RecyclerView - AHORA EVITA EL TABBAR -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTenses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvTitle"
    app:layout_constraintBottom_toTopOf="@id/bottomTabBar"
    tools:listitem="@layout/item_tense" />

</androidx.constraintlayout.widget.ConstraintLayout>
